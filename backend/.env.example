# Database
DATABASE_URL=postgresql://user:password@localhost:5432/job_multipost?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-here

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PER_JOB=299 # $2.99 in cents

# Server
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# LLM Configuration
LLM_PROVIDER=groq # groq | openai | anthropic
LLM_MODEL=llama-3.1-8b-instant
GROQ_API_KEY=gsk_...
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Fallback LLM (optional)
LLM_FALLBACK_PROVIDER=openai
LLM_FALLBACK_API_KEY=sk-...
LLM_COST_LIMIT=0.01 # Max cost per operation in USD